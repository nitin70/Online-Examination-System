<%- include("partials/head"); -%>
<%- include("partials/header"); -%>
<%- include("partials/sidebar"); -%>



<main id="main" class="main">

    <div class="pagetitle">
      <h1>Exam Form</h1>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-6">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Exam Form</h5>

              <!-- General Form Elements -->
              <form action="/editquestion/<%=question.id%>" method="post">
                <div class="row mb-3">
                <!--    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Exam Name</label>
                        <div class="col-sm-10">
                          <select name="examname" class="form-select" aria-label="Default select example">
                            <option selected>select exam</option>
                            <% { exams.forEach((exam)=>{ %>
                              <option value="<%=exam.name%>"><%=exam.name%></option>
                            <% }) %>
                         <%   } %>
                          </select>
                        </div>
                      </div>
                      -->

                  <label for="Question" class="col-sm-2 col-form-label">Question</label>
                  <div class="col-sm-10 col-12">
                    <input type="text" name = "question"class="form-control" value="<%=question.question%>" required>
                    <div class="invalid-feedback">Please, enter question!</div>
                  </div>

                  <label for="option" class="col-sm-2 col-form-label">Option 1</label>
                  <div class="col-sm-10 col-12">
                    <input type="text" name = "option1"class="form-control" value="<%=question.options[0]%>" required>
                    <div class="invalid-feedback">Please, enter</div>
                  </div>

                  <label for="option" class="col-sm-2 col-form-label">Option 2</label>
                  <div class="col-sm-10 col-12">
                    <input type="text" name = "option2"class="form-control" value="<%=question.options[1]%>" required>
                    <div class="invalid-feedback">Please, enter</div>
                  </div>

                  <label for="option3" class="col-sm-2 col-form-label">Option 3</label>
                  <div class="col-sm-10 col-12">
                    <input type="text" name = "option3"class="form-control" value="<%=question.options[2]%>" required>
                    <div class="invalid-feedback">Please, enter</div>
                  </div>

                  <label for="option" class="col-sm-2 col-form-label">Option 4</label>
                  <div class="col-sm-10 col-12">
                    <input type="text" name = "option4"class="form-control" value="<%=question.options[3]%>" required>
                    <div class="invalid-feedback">Please, enter</div>
                  </div>
                  
                  
                    <div class="row mb-3">
                      <label for="answer" class="col-sm-2 col-form-label">Answer</label>
                        <div class="col-sm-10">
                          <select name="answer" class="form-select" aria-label="Default select example">
                            
                              <% if(question.answer == 0)   { %>
                                <option value="0" selected>One</option>
                                
                                <option value="1">Two</option>
                                <option value="2">Three</option>
                                <option value="3">Four</option>
                              <%}%>
                              <% if(question.answer == 1)  { %>
                                
                                <option value="0">One</option>
                                <option value="1" selected>Two</option>
                                <option value="2">Three</option>
                                <option value="3">Four</option>
                              <%}%>
                              <% if(question.answer == 2)  { %>
                                
                                <option value="0">One</option>
                                <option value="1">Two</option>
                                <option value="2" selected>Three</option>
                                <option value="3">Four</option>
                              <%}%>
                              <% if(question.answer == 3)   {%>
                                <option value="0">One</option>
                                <option value="1">Two</option>
                                <option value="2">Three</option>
                                <option value="3" selected>Four</option>
                                
                              <%}%>
                            
                            
                          </select>
                        </div>
                      </div>
                  
                </div>

                <div class="row mb-3">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit Form</button>
                  </div>
                </div>

              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main>




